<div class="dashboard row">
	<div class="col-lg-12 text-center">
		<div class="row">
			<nav class="btn-group stats header-icons">
				<button class="btn btn-default lives-clock">
					<span class="icon-heart"></span> 
					<span class="quantity lives">{{lives}}</span>
					<span class="clock full-lives">Full</span>
					<span class="clock remaining-time"></span>
				</button>
				<button class="btn btn-default earn-coins">
					<span class="icon-coin"></span>
					<span class="quantity coins">{{coins}}</span>
				</button>
				<button class="btn btn-default rewards">
					<span class="icon-rewards"></span>
					<span class="quantity rewards">Rank</span>
				</button>
			</nav>
		</div>

		<div class="row body-btn-group-nav">
			<div class="col-sm-10 col-sm-offset-1">
				<div class="row">
					<div class="col-sm-6">
						<button class="btn btn-default btn-lg">Invite Friends</button>
					</div>
					<div class="col-sm-6">
						<button class="btn btn-default btn-lg">Challenge Friends</button>
					</div>
					<div class="col-sm-6">
						<button class="btn btn-default btn-lg">Questions Bank</button>
					</div>
					<div class="col-sm-6">
						<button class="btn btn-default btn-lg">Ladder Board</button>
					</div>
				</div>
			</div>
		</div>

		<div class="row body-recent-activities">
			<div class="col-sm-10 col-sm-offset-1">
				<div class="row">
					<div class="col-sm-12">
						<!-- Nav tabs -->
						<ul class="nav nav-tabs" role="tablist">
							<li role="presentation" class="active">
								<a href="#recent-activities" aria-controls="home" role="tab" data-toggle="tab">Recent Activities</a>
							</li>
						</ul>

						 <!-- Tab panes -->
						 <div class="tab-content">
							<div role="tabpanel" class="tab-pane active" id="recent-activities">...</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>